@model MyAppFirst.Models.Pedido
@{
    var platos = ViewBag.Platos as List<MyAppFirst.Models.Plato> ?? new List<MyAppFirst.Models.Plato>();
}

<div class="d-flex justify-content-center align-items-start py-4 bg-light">
    <div class="card shadow-sm p-4 w-100" style="max-width: 600px;">
        <h3 class="mb-3 text-center">Nuevo Pedido</h3>
        <p class="text-center">Atendido por: <strong>@ViewBag.Username</strong></p>

        <form asp-action="Create" method="post">
            <div class="mb-4">
                <label asp-for="NumeroMesa" class="form-label">Mesa</label>
                <input asp-for="NumeroMesa" class="form-control" placeholder="Número de mesa" />
            </div>

            <h4 class="mb-3">Platos</h4>
            <div class="row g-3">
                @for (int i = 0; i < platos.Count; i++)
                {
                    <div class="col-12 col-md-6">
                        <div class="card p-2 h-100">
                            <label class="form-label fw-bold">@platos[i].Nombre</label>
                            <p class="mb-2 text-muted">Precio: S/. @platos[i].Precio.ToString("N2")</p>
                            <input type="hidden" name="platoIds[@i]" value="@platos[i].Id" />
                            <input type="number" name="cantidades[@i]" class="form-control" min="0" value="0" />
                        </div>
                    </div>
                }
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary">Enviar a Cocina</button>
                <button type="button" class="btn btn-secondary" onclick="window.history.back();">Cancelar</button>
            </div>
        </form>
    </div>
</div>
