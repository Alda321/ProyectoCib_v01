@model List<MyAppFirst.Models.Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

<h3 class="mb-4">Pedidos</h3>

<div class="mb-3">
    <form asp-action="Logout" asp-controller="Usuario" method="post" class="d-inline">
        <button type="submit" class="btn btn-danger me-1">Cerrar Sesión</button>
    </form>

    <button type="button" class="btn btn-secondary me-1" onclick="window.history.back();">Cancelar</button>

    <a asp-action="Create" class="btn btn-primary">Nuevo Pedido</a>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-primary">
        <tr>
            <th>ID</th>
            <th>Mesa</th>
            <th>Estado</th>
            <th>Comentario</th>   @* <-- nueva columna *@
            <th>Detalles</th>
            <th>Operaciones</th>
            <th>Otros</th>
        </tr>
    </thead>
    <tbody id="TablaActualizar">
        @foreach (var pedido in Model.Where(p => p.Detalles.Any(d => d.Cantidad >= 1)))
        {
            <tr>
                <td>@pedido.Id</td>
                <td>@pedido.NumeroMesa</td>
                <td>@pedido.Estado</td>
                <td>@pedido.Comentario</td>   @* <-- mostramos el comentario *@
                <td>
                    <ul class="mb-0 ps-3">
                        @foreach (var detalle in pedido.Detalles.Where(d => d.Cantidad >= 1))
                        {
                            <li>@($"{detalle.Plato.Nombre} (x{detalle.Cantidad})")</li>
                        }
                    </ul>
                </td>
                <td>
                    @if (pedido.Estado == MyAppFirst.Models.EstadoPedido.Pendiente)
                    {
                        <a asp-action="Edit" asp-route-id="@pedido.Id" class="btn btn-primary btn-sm">Editar</a>
                    }
                    else
                    {
                        <span class="text-muted">No editable</span>
                    }
                </td>
                <td>
                    @if (pedido.Pagado)
                    {
                        <span class="badge bg-success">Pagado</span>
                    }
                    else
                    {
                        <a asp-action="ConfirmarPago" asp-route-id="@pedido.Id" class="btn btn-success btn-sm">
                            Marcar como Pagado
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // Actualizar tabla cada segundo
    setInterval(function () {
        $("#TablaActualizar").load(window.location.href + " #TablaActualizar>*");
    }, 1000);
</script>
