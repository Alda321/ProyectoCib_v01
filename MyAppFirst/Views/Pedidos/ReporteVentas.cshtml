@model List<MyAppFirst.Models.Pedido>

@{
    ViewData["Title"] = "Reporte de Ventas";
    decimal totalVentas = 0;
}

<h3 class="mb-4">Reporte de Ventas</h3>

<div class="mb-3">
    <a asp-action="Index" class="btn btn-secondary me-1">Volver</a>

    <form asp-action="Logout" asp-controller="Usuario" method="post" class="d-inline">
        <button type="submit" class="btn btn-danger me-1">Cerrar Sesión</button>
    </form>

    <a asp-action="Index" asp-controller="Cocina" class="btn btn-warning me-1">Ver Cocina</a>
    <a asp-action="Index" asp-controller="Pedidos" class="btn btn-primary me-1">Ver Pedidos</a>
    <a asp-action="Index" asp-controller="Platos" class="btn btn-dark me-1">Ver Platos</a>
    <a asp-action="Create" asp-controller="Usuario" class="btn btn-success">Registrar Nuevos Usuarios</a>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-primary">
        <tr>
            <th>Pedido ID</th>
            <th>Mesa</th>
            <th>Fecha</th>
            <th>Plato</th>
            <th>Cantidad</th>
            <th>Estado</th>
            <th>Precio Unitario</th>
            <th>Total Plato</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model)
        {
            foreach (var detalle in pedido.Detalles.Where(d => d.Cantidad >= 1))
            {
                var totalPlato = detalle.Cantidad * detalle.Plato.Precio;
                totalVentas += totalPlato;
                <tr>
                    <td>@pedido.Id</td>
                    <td>@pedido.NumeroMesa</td>
                    <td>@pedido.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@detalle.Plato.Nombre</td>
                    <td>@detalle.Cantidad</td>
                    <td>@pedido.Estado</td>
                    <td>@detalle.Plato.Precio.ToString("N2")</td>
                    <td>@totalPlato.ToString("N2")</td>
                </tr>
            }
        }
    </tbody>
    <tfoot class="table-light">
        <tr>
            <td colspan="8">
                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="ExportarReporteVentas" class="btn btn-dark">Imprimir</a>
                    
                    <span class="fw-bold">Total Ventas: @totalVentas.ToString("N2")</span>
                </div>
            </td>
        </tr>
    </tfoot>
</table>
